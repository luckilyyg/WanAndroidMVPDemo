<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_36"
    android:layout_marginTop="@dimen/space_10"
    android:layout_marginRight="@dimen/space_36"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/dp_10">
    <!--app:cardBackgroundColor这是设置背景颜色-->
    <!--app:cardCornerRadius这是设置圆角大小-->
    <!--app:cardElevation这是设置z轴的阴影-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_authorheadpic"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_margin="@dimen/space_24"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_authorheadpic"
                android:text="作者" />

            <TextView
                android:id="@+id/tv_publishdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_10"
                android:text="日期" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_contenttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_32"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center|left"
            android:text="标题" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4">

            <TextView
                android:id="@+id/tvChapterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_32"
                android:layout_marginTop="@dimen/space_10"
                android:text="章节名称"
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:id="@+id/ivCollect"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_32"
                android:src="@drawable/ic_nocollect" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>