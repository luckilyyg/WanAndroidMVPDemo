<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.crazy.gy.view.NoScrollViewPager
        android:id="@+id/vp_homepage_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/id_homepage_tablayout"></com.crazy.gy.view.NoScrollViewPager>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@id/id_homepage_tablayout"
        android:background="#ccc" />


    <android.support.design.widget.TabLayout
        android:id="@+id/id_homepage_tablayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed" />
</RelativeLayout>